<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.expensetracking">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!--<user-feature-->
        <!--android:name="android.hardware.camera2"-->
        <!--android:required="true" />-->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HomeScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DashboardActivity"
            android:label="@string/title_activity_dashboard">
        </activity>
        <activity
            android:name=".AddExpenses"
            android:label="@string/title_activity_add_expenses"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".smsHomepageActivity"
            android:label="@string/title_activity_sms_homepage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".smsBillsActivity"
            android:label="@string/title_activity_sms_bills"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".expenseDescription"
            android:label="@string/title_activity_expense_description"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".Voice" />

        <activity
            android:name=".ImageClicker"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>
